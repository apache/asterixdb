// testing micro external sort in a subplan that generates runs and merges them
drop dataverse test if exists;
create dataverse test;
use test;

set `compiler.sortmemory` "130KB";

with ds AS (
from range(0,89999) i
select value {"id": i, "a":
CASE ( i % 3)
WHEN 0 THEN "one"
WHEN 1 THEN "two"
WHEN 2 THEN "three"
END,
"b": CASE ( (i div 3) % 3)
WHEN 0 THEN "SUM_1s"
WHEN 1 THEN "SUM_2s"
WHEN 2 THEN "SUM_3s" END,
"c": CASE ((i div 3) % 3)
WHEN 0 THEN 1
WHEN 1 THEN 2
WHEN 2 THEN 3 END})
SELECT `group`,
(SELECT group_num, sum(g.d.c) AS sum
FROM g
GROUP BY g.d.b AS group_num
ORDER BY sum
) AS sum_per_group
FROM ds d
GROUP BY d.a AS `group`
GROUP AS g
ORDER BY `group`;