USE gby;

FROM policies p
GROUP BY state GROUP AS g
SELECT state,
       COUNT(*) num_policies,
       (
         FROM g
         SELECT VALUE SUM(
                  (
                    FROM g.p.accidents a
                    WHERE a.year = "2016"
                    SELECT VALUE COUNT(*)
                  )[0]
                )
       )[0]  / (COUNT(*) * 1.0 ) AS risk_2016,
       (
         FROM g
         SELECT VALUE SUM(
                  (
                    FROM g.p.accidents a
                    WHERE a.year = "2015"
                    SELECT VALUE COUNT(*)
                  )[0]
                )
       )[0] / (COUNT(*) * 1.0 ) AS risk_2015
ORDER BY risk_2016 DESC
LIMIT 5;
