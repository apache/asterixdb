<test-suite xmlns="urn:xml.testframework.asterix.apache.org" ResultOffsetPath="results" QueryOffsetPath="queries_sqlpp" QueryFileExtension=".sqlpp">
  <test-group name="iceberg">
    <test-case FilePath="iceberg/catalog/">
      <compilation-unit name="all-supported-types">
        <output-dir compare="Text">all-supported-types</output-dir>
      </compilation-unit>
    </test-case>
    <test-case FilePath="iceberg/catalog/">
      <compilation-unit name="check-catalog-record">
        <output-dir compare="Text">check-catalog-record</output-dir>
      </compilation-unit>
    </test-case>
    <test-case FilePath="iceberg/catalog/negative">
      <compilation-unit name="bad-catalog-type">
        <output-dir compare="Text">bad-catalog-type</output-dir>
        <expected-error>ASX1228: Unsupported catalog type: 'FakeIcebergCatalog'</expected-error>
      </compilation-unit>
    </test-case>
    <test-case FilePath="iceberg/catalog/negative">
      <compilation-unit name="bad-source-type">
        <output-dir compare="Text">bad-source-type</output-dir>
        <expected-error>ASX1230: Unsupported Iceberg catalog source: 'FAKE_AWS_GLUE'</expected-error>
      </compilation-unit>
    </test-case>
    <test-case FilePath="iceberg/catalog/negative">
      <compilation-unit name="missing-warehouse">
        <output-dir compare="Text">missing-warehouse</output-dir>
        <expected-error>ASX0049: Parameter(s) warehouse must be specified</expected-error>
      </compilation-unit>
    </test-case>
    <test-case FilePath="iceberg/catalog/negative">
      <compilation-unit name="missing-source-type">
        <output-dir compare="Text">missing-source-type</output-dir>
        <expected-error>ASX1229: Iceberg catalog source required</expected-error>
      </compilation-unit>
    </test-case>
    <test-case FilePath="iceberg/catalog/negative">
      <compilation-unit name="catalog-already-exists">
        <output-dir compare="Text">catalog-already-exists</output-dir>
        <expected-error>ASX1226: A catalog with this name myGlueCatalog already exists</expected-error>
      </compilation-unit>
    </test-case>
    <test-case FilePath="iceberg/catalog/negative">
      <compilation-unit name="drop-does-not-exist">
        <output-dir compare="Text">drop-does-not-exist</output-dir>
        <expected-error>ASX1227: Cannot find catalog with name myDoesNotExistGlueCatalog</expected-error>
      </compilation-unit>
    </test-case>
  </test-group>
</test-suite>
