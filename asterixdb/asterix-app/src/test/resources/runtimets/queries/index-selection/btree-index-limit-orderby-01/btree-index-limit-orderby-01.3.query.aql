/*
 *  Description     : Limit Push-down into an external sort after an index-search - order by a non primary key field.
 *  Expected Result : Success
 *
*/

use dataverse test;

for $o in dataset('MyData')
where $o.id < 50
order by $o.docid
limit 2
return {"pk":$o.id, "sk":$o.docid}
