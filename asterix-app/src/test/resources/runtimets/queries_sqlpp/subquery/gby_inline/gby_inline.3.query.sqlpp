/**
 * This query is to verify the fix of ASTERIXDB-1291.
 */

USE test;

FROM Customers c
GROUP BY c.c_custkey AS ccustkey, c.c_nationkey AS cnationkey
LET orders = (
    FROM Orders o
    WHERE cnationkey = 5 and o.o_custkey = ccustkey
    SELECT ELEMENT o
  )
SELECT ccustkey customer_name, orders orders;